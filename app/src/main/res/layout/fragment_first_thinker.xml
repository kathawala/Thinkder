<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.farhan.thinkers2.FirstThinker$PlaceholderFragment">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hesse_quote"
        android:id="@+id/textView"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/section_label"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hesse_year"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/button2"
        android:onClick="nextFrag"
        android:background="@drawable/roundedredbutton"
        android:layout_toEndOf="@+id/section_label"
        android:layout_marginStart="73dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="51dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/button3"
        android:onClick="nextFrag"
        android:background="@drawable/roundedgreenbutton"
        android:layout_toEndOf="@+id/button2"
        android:layout_alignTop="@+id/button2"
        android:layout_marginStart="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:onClick="nextLevel"
        android:layout_toEndOf="@+id/section_label"
        android:layout_above="@+id/button2"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
